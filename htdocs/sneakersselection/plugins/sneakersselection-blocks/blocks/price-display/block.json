{
    "$schema": "https://schemas.wp.org/trunk/block.json",
    "apiVersion": 3,
    "name": "sneakersselection/price-display",
    "version": "1.0.0",
    "title": "Price Display",
    "category": "sneakersselection",
    "description": "Display sneaker prices with retail vs resale comparison.",
    "keywords": ["price", "retail", "resale", "cost"],
    "textdomain": "sneakersselection-blocks",
    "attributes": {
        "retailPrice": {
            "type": "string",
            "default": "180"
        },
        "resalePrice": {
            "type": "string",
            "default": "350"
        },
        "currency": {
            "type": "string",
            "default": "$"
        },
        "retailLabel": {
            "type": "string",
            "default": "Retail"
        },
        "resaleLabel": {
            "type": "string",
            "default": "Resale"
        },
        "showResale": {
            "type": "boolean",
            "default": true
        },
        "showDifference": {
            "type": "boolean",
            "default": true
        },
        "layout": {
            "type": "string",
            "default": "horizontal",
            "enum": ["horizontal", "vertical", "compact"]
        },
        "highlightPrice": {
            "type": "string",
            "default": "retail",
            "enum": ["retail", "resale", "none"]
        }
    },
    "supports": {
        "html": false,
        "spacing": {
            "padding": true,
            "margin": true
        }
    },
    "editorScript": {
        "handle": "sneakersselection-price-display-editor",
        "src": "file:./editor.js",
        "dependencies": ["wp-blocks", "wp-element", "wp-block-editor", "wp-components", "wp-i18n"]
    },
    "render": "file:./render.php",
    "style": "file:./style.css"
}
