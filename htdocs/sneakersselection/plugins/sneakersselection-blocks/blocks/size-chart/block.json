{
    "$schema": "https://schemas.wp.org/trunk/block.json",
    "apiVersion": 3,
    "name": "sneakersselection/size-chart",
    "version": "1.0.0",
    "title": "Size Chart",
    "category": "sneakersselection",
    "description": "A comprehensive sneaker size conversion chart (US, UK, EU, CM).",
    "keywords": ["size", "chart", "conversion", "guide"],
    "textdomain": "sneakersselection-blocks",
    "attributes": {
        "heading": {
            "type": "string",
            "default": "Size Guide"
        },
        "description": {
            "type": "string",
            "default": "Find your perfect fit with our size conversion chart."
        },
        "gender": {
            "type": "string",
            "default": "mens",
            "enum": ["mens", "womens", "kids"]
        },
        "showUS": {
            "type": "boolean",
            "default": true
        },
        "showUK": {
            "type": "boolean",
            "default": true
        },
        "showEU": {
            "type": "boolean",
            "default": true
        },
        "showCM": {
            "type": "boolean",
            "default": true
        },
        "highlightSize": {
            "type": "string",
            "default": ""
        }
    },
    "supports": {
        "html": false,
        "align": ["wide"],
        "spacing": {
            "padding": true,
            "margin": true
        }
    },
    "editorScript": {
        "handle": "sneakersselection-size-chart-editor",
        "src": "file:./editor.js",
        "dependencies": ["wp-blocks", "wp-element", "wp-block-editor", "wp-components", "wp-i18n"]
    },
    "render": "file:./render.php",
    "style": "file:./style.css"
}
