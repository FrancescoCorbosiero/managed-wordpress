{
    "$schema": "https://schemas.wp.org/trunk/block.json",
    "apiVersion": 3,
    "name": "sneakersselection/product-showcase",
    "version": "1.0.0",
    "title": "Product Showcase",
    "category": "sneakersselection",
    "description": "A detailed product showcase with image gallery, pricing, and specifications.",
    "keywords": ["product", "showcase", "sneaker", "detail"],
    "textdomain": "sneakersselection-blocks",
    "attributes": {
        "brand": {
            "type": "string",
            "default": "Nike"
        },
        "name": {
            "type": "string",
            "default": "Air Jordan 1 Retro High OG"
        },
        "colorway": {
            "type": "string",
            "default": "Chicago"
        },
        "styleCode": {
            "type": "string",
            "default": "DZ5485-612"
        },
        "price": {
            "type": "string",
            "default": "180"
        },
        "originalPrice": {
            "type": "string",
            "default": ""
        },
        "currency": {
            "type": "string",
            "default": "$"
        },
        "badge": {
            "type": "string",
            "default": "",
            "enum": ["", "new", "sale", "limited", "soldout"]
        },
        "description": {
            "type": "string",
            "default": "The Air Jordan 1 Retro High OG returns in the iconic Chicago colorway. This legendary silhouette features premium leather construction with classic color blocking."
        },
        "mainImage": {
            "type": "string",
            "default": ""
        },
        "mainImageId": {
            "type": "number",
            "default": 0
        },
        "galleryImages": {
            "type": "array",
            "default": []
        },
        "sizes": {
            "type": "array",
            "default": ["7", "7.5", "8", "8.5", "9", "9.5", "10", "10.5", "11", "11.5", "12", "13"]
        },
        "unavailableSizes": {
            "type": "array",
            "default": []
        },
        "buttonText": {
            "type": "string",
            "default": "Add to Cart"
        },
        "buttonUrl": {
            "type": "string",
            "default": "#"
        },
        "showSizeSelector": {
            "type": "boolean",
            "default": true
        },
        "showGallery": {
            "type": "boolean",
            "default": true
        }
    },
    "supports": {
        "html": false,
        "align": ["wide", "full"],
        "spacing": {
            "padding": true,
            "margin": true
        }
    },
    "editorScript": {
        "handle": "sneakersselection-product-showcase-editor",
        "src": "file:./editor.js",
        "dependencies": ["wp-blocks", "wp-element", "wp-block-editor", "wp-components", "wp-i18n"]
    },
    "viewScript": "file:./view.js",
    "render": "file:./render.php",
    "style": "file:./style.css"
}
