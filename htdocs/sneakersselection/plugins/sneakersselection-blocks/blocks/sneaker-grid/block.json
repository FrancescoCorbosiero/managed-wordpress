{
    "$schema": "https://schemas.wp.org/trunk/block.json",
    "apiVersion": 3,
    "name": "sneakersselection/sneaker-grid",
    "version": "1.0.0",
    "title": "Sneaker Grid",
    "category": "sneakersselection",
    "description": "A responsive grid layout for displaying multiple sneaker products.",
    "keywords": ["grid", "products", "sneakers", "collection"],
    "textdomain": "sneakersselection-blocks",
    "attributes": {
        "heading": {
            "type": "string",
            "default": ""
        },
        "eyebrow": {
            "type": "string",
            "default": ""
        },
        "columns": {
            "type": "number",
            "default": 4
        },
        "products": {
            "type": "array",
            "default": [
                {
                    "id": 1,
                    "brand": "Nike",
                    "name": "Air Jordan 1 High OG",
                    "price": "180",
                    "image": "",
                    "url": "#",
                    "badge": "new"
                },
                {
                    "id": 2,
                    "brand": "Adidas",
                    "name": "Yeezy Boost 350 V2",
                    "price": "230",
                    "image": "",
                    "url": "#",
                    "badge": ""
                },
                {
                    "id": 3,
                    "brand": "Nike",
                    "name": "Dunk Low Retro",
                    "price": "110",
                    "image": "",
                    "url": "#",
                    "badge": "sale"
                },
                {
                    "id": 4,
                    "brand": "New Balance",
                    "name": "550",
                    "price": "130",
                    "image": "",
                    "url": "#",
                    "badge": ""
                }
            ]
        },
        "currency": {
            "type": "string",
            "default": "$"
        },
        "showBrand": {
            "type": "boolean",
            "default": true
        },
        "showPrice": {
            "type": "boolean",
            "default": true
        },
        "enableHoverEffect": {
            "type": "boolean",
            "default": true
        },
        "viewAllText": {
            "type": "string",
            "default": ""
        },
        "viewAllUrl": {
            "type": "string",
            "default": "#"
        }
    },
    "supports": {
        "html": false,
        "align": ["wide", "full"],
        "spacing": {
            "padding": true,
            "margin": true
        }
    },
    "editorScript": {
        "handle": "sneakersselection-sneaker-grid-editor",
        "src": "file:./editor.js",
        "dependencies": ["wp-blocks", "wp-element", "wp-block-editor", "wp-components", "wp-i18n"]
    },
    "render": "file:./render.php",
    "style": "file:./style.css"
}
