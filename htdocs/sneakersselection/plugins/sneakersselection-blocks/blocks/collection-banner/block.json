{
    "$schema": "https://schemas.wp.org/trunk/block.json",
    "apiVersion": 3,
    "name": "sneakersselection/collection-banner",
    "version": "1.0.0",
    "title": "Collection Banner",
    "category": "sneakersselection",
    "description": "A banner for showcasing sneaker collections or categories.",
    "keywords": ["banner", "collection", "category", "promo"],
    "textdomain": "sneakersselection-blocks",
    "attributes": {
        "eyebrow": {
            "type": "string",
            "default": "New Collection"
        },
        "heading": {
            "type": "string",
            "default": "Summer 2024"
        },
        "description": {
            "type": "string",
            "default": "Discover our latest arrivals designed for the season."
        },
        "buttonText": {
            "type": "string",
            "default": "Shop Collection"
        },
        "buttonUrl": {
            "type": "string",
            "default": "#"
        },
        "backgroundImage": {
            "type": "string",
            "default": ""
        },
        "backgroundImageId": {
            "type": "number",
            "default": 0
        },
        "backgroundColor": {
            "type": "string",
            "default": "#000000"
        },
        "textColor": {
            "type": "string",
            "default": "#ffffff"
        },
        "overlayOpacity": {
            "type": "number",
            "default": 50
        },
        "minHeight": {
            "type": "string",
            "default": "400px"
        },
        "contentPosition": {
            "type": "string",
            "default": "center",
            "enum": ["left", "center", "right"]
        },
        "showParallax": {
            "type": "boolean",
            "default": false
        }
    },
    "supports": {
        "html": false,
        "align": ["wide", "full"],
        "spacing": {
            "padding": true,
            "margin": true
        }
    },
    "editorScript": {
        "handle": "sneakersselection-collection-banner-editor",
        "src": "file:./editor.js",
        "dependencies": ["wp-blocks", "wp-element", "wp-block-editor", "wp-components", "wp-i18n"]
    },
    "render": "file:./render.php",
    "style": "file:./style.css"
}
