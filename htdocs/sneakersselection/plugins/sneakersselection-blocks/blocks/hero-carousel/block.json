{
    "$schema": "https://schemas.wp.org/trunk/block.json",
    "apiVersion": 3,
    "name": "sneakersselection/hero-carousel",
    "version": "1.0.0",
    "title": "Hero Carousel",
    "category": "sneakersselection",
    "icon": "slides",
    "description": "Full-screen hero carousel with cinematic animations and split-text reveals.",
    "keywords": ["hero", "carousel", "slider", "banner", "fullscreen"],
    "textdomain": "sneakersselection-blocks",
    "attributes": {
        "slides": {
            "type": "array",
            "default": []
        },
        "autoplay": {
            "type": "number",
            "default": 6000
        },
        "showDots": {
            "type": "boolean",
            "default": true
        },
        "showArrows": {
            "type": "boolean",
            "default": true
        }
    },
    "supports": {
        "align": ["full", "wide"],
        "html": false
    },
    "editorScript": "file:./editor.js",
    "style": "file:./style.css",
    "render": "file:./render.php"
}
