{
    "$schema": "https://schemas.wp.org/trunk/block.json",
    "apiVersion": 3,
    "name": "sneakersselection/size-chart-modal",
    "version": "1.0.0",
    "title": "Size Chart Modal",
    "category": "sneakersselection",
    "icon": "editor-table",
    "description": "Size conversion chart with modal popup capability for product pages.",
    "keywords": ["size", "chart", "guide", "modal", "conversion"],
    "textdomain": "sneakersselection-blocks",
    "attributes": {
        "modalId": {
            "type": "string",
            "default": "size-chart"
        },
        "title": {
            "type": "string",
            "default": "Size Guide"
        },
        "description": {
            "type": "string",
            "default": "Find your perfect fit"
        },
        "triggerText": {
            "type": "string",
            "default": "Size Guide"
        },
        "showTrigger": {
            "type": "boolean",
            "default": true
        }
    },
    "supports": {
        "html": false,
        "multiple": false
    },
    "editorScript": "file:./editor.js",
    "render": "file:./render.php"
}
