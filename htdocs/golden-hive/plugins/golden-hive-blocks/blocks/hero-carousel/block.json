{
    "$schema": "https://schemas.wp.org/trunk/block.json",
    "apiVersion": 3,
    "name": "golden-hive/hero-carousel",
    "version": "1.0.0",
    "title": "Hero Carousel",
    "category": "golden-hive",
    "icon": "slides",
    "description": "Carousel hero full-screen con animazioni cinematiche e split-text reveal.",
    "keywords": ["hero", "carousel", "slider", "banner", "sneakers"],
    "textdomain": "golden-hive-blocks",
    "attributes": {
        "slides": {
            "type": "array",
            "default": []
        },
        "autoplay": {
            "type": "number",
            "default": 6000
        },
        "showDots": {
            "type": "boolean",
            "default": true
        },
        "showArrows": {
            "type": "boolean",
            "default": true
        }
    },
    "supports": {
        "align": ["full"],
        "html": false
    },
    "editorScript": "file:./editor.js",
    "render": "file:./render.php"
}
