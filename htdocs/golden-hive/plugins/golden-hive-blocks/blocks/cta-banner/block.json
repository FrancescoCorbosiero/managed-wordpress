{
    "$schema": "https://schemas.wp.org/trunk/block.json",
    "apiVersion": 3,
    "name": "golden-hive/cta-banner",
    "version": "1.0.0",
    "title": "CTA Banner",
    "category": "golden-hive",
    "icon": "megaphone",
    "description": "Banner call-to-action premium full-bleed con gradienti drammatici e glow effects.",
    "keywords": ["cta", "banner", "call to action", "promo", "offerta"],
    "textdomain": "golden-hive-blocks",
    "attributes": {
        "eyebrow": {
            "type": "string",
            "default": ""
        },
        "title": {
            "type": "string",
            "default": ""
        },
        "text": {
            "type": "string",
            "default": ""
        },
        "buttonText": {
            "type": "string",
            "default": "Shop Now"
        },
        "buttonUrl": {
            "type": "string",
            "default": ""
        },
        "backgroundImage": {
            "type": "string",
            "default": ""
        },
        "showGlow": {
            "type": "boolean",
            "default": true
        }
    },
    "supports": {
        "align": ["full", "wide"],
        "html": false
    },
    "editorScript": "file:./editor.js",
    "render": "file:./render.php"
}
