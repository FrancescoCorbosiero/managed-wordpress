{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "alpacode/cta",
	"version": "1.0.0",
	"title": "Call to Action",
	"category": "alpacode",
	"description": "Premium CTA with animated gradients, glow effects, and ripple animations.",
	"keywords": [
		"cta",
		"call to action",
		"contact",
		"conversion",
		"gradient"
	],
	"textdomain": "alpacode-blocks",
	"editorScript": {
		"handle": "alpacode-cta-editor",
		"src": "file:./editor.js",
		"dependencies": [
			"wp-blocks",
			"wp-element",
			"wp-block-editor",
			"wp-components",
			"wp-server-side-render"
		]
	},
	"attributes": {
		"eyebrow": {
			"type": "string",
			"default": "Get Started Today"
		},
		"heading": {
			"type": "string",
			"default": "Ready to Transform Your Business?"
		},
		"description": {
			"type": "string",
			"default": "Let's discuss how we can help you achieve your goals with cutting-edge technology solutions and expert guidance."
		},
		"buttonText": {
			"type": "string",
			"default": "Schedule a Call"
		},
		"buttonUrl": {
			"type": "string",
			"default": "#contact"
		},
		"secondaryButtonText": {
			"type": "string",
			"default": ""
		},
		"secondaryButtonUrl": {
			"type": "string",
			"default": ""
		},
		"variant": {
			"type": "string",
			"default": "gradient",
			"enum": ["default", "gradient", "glow", "minimal"]
		},
		"enableAnimatedGradient": {
			"type": "boolean",
			"default": true
		},
		"enableGlow": {
			"type": "boolean",
			"default": true
		},
		"enableTextScramble": {
			"type": "boolean",
			"default": false
		}
	},
	"supports": {
		"html": false,
		"align": [
			"wide",
			"full"
		],
		"color": {
			"background": true,
			"text": true
		},
		"spacing": {
			"padding": true,
			"margin": true
		}
	},
	"style": "file:./style.css",
	"render": "file:./render.php"
}
