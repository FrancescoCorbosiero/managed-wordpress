{
    "$schema": "https://schemas.wp.org/trunk/block.json",
    "apiVersion": 3,
    "name": "alpacode/pricing",
    "version": "0.0.2",
    "title": "Pricing Table",
    "category": "alpacode",
    "description": "Modern pricing table with features comparison and highlight effects.",
    "keywords": [
        "pricing",
        "plans",
        "comparison",
        "subscription",
        "packages"
    ],
    "textdomain": "alpacode-blocks",
    "editorScript": {
        "handle": "alpacode-pricing-editor",
        "src": "file:./editor.js",
        "dependencies": [
            "wp-blocks",
            "wp-element",
            "wp-block-editor",
            "wp-components",
            "wp-server-side-render"
        ]
    },
    "style": "file:./style.css",
    "render": "file:./render.php",
    "attributes": {
        "sectionTitle": {
            "type": "string",
            "default": "Simple, Transparent Pricing"
        },
        "sectionSubtitle": {
            "type": "string",
            "default": "Choose the perfect plan for your needs"
        },
        "plans": {
            "type": "array",
            "default": [
                {
                    "name": "Starter",
                    "price": "49",
                    "period": "month",
                    "description": "Perfect for small projects and startups",
                    "features": [
                        "Up to 5 projects",
                        "Basic support",
                        "1 GB storage",
                        "Community access"
                    ],
                    "buttonText": "Get Started",
                    "buttonUrl": "#",
                    "featured": false
                },
                {
                    "name": "Professional",
                    "price": "99",
                    "period": "month",
                    "description": "Best for growing businesses",
                    "features": [
                        "Unlimited projects",
                        "Priority support",
                        "50 GB storage",
                        "Advanced analytics",
                        "API access"
                    ],
                    "buttonText": "Get Started",
                    "buttonUrl": "#",
                    "featured": true
                },
                {
                    "name": "Enterprise",
                    "price": "199",
                    "period": "month",
                    "description": "For large organizations",
                    "features": [
                        "Unlimited everything",
                        "24/7 dedicated support",
                        "500 GB storage",
                        "Custom integrations",
                        "SLA guarantee",
                        "Dedicated manager"
                    ],
                    "buttonText": "Contact Sales",
                    "buttonUrl": "#",
                    "featured": false
                }
            ]
        }
    },
    "supports": {
        "html": false,
        "align": [
            "wide",
            "full"
        ],
        "color": {
            "background": true,
            "text": true
        },
        "spacing": {
            "padding": true,
            "margin": true
        }
    }
}