{
    "$schema": "https://schemas.wp.org/trunk/block.json",
    "apiVersion": 3,
    "name": "alpacode/pricing",
    "version": "1.0.0",
    "title": "Pricing Table",
    "category": "alpacode",
    "description": "Modern pricing table with monthly/annual toggle and premium animations.",
    "keywords": [
        "pricing",
        "plans",
        "comparison",
        "subscription",
        "packages",
        "toggle"
    ],
    "textdomain": "alpacode-blocks",
    "editorScript": {
        "handle": "alpacode-pricing-editor",
        "src": "file:./editor.js",
        "dependencies": [
            "wp-blocks",
            "wp-element",
            "wp-block-editor",
            "wp-components",
            "wp-server-side-render"
        ]
    },
    "style": "file:./style.css",
    "viewScript": "file:./view.js",
    "render": "file:./render.php",
    "attributes": {
        "eyebrow": {
            "type": "string",
            "default": "Pricing"
        },
        "heading": {
            "type": "string",
            "default": "Simple, Transparent Pricing"
        },
        "description": {
            "type": "string",
            "default": "Choose the perfect plan for your needs. No hidden fees."
        },
        "enableToggle": {
            "type": "boolean",
            "default": true
        },
        "monthlyLabel": {
            "type": "string",
            "default": "Monthly"
        },
        "annualLabel": {
            "type": "string",
            "default": "Annual"
        },
        "annualDiscount": {
            "type": "number",
            "default": 20
        },
        "plans": {
            "type": "array",
            "default": [
                {
                    "name": "Starter",
                    "monthlyPrice": "49",
                    "annualPrice": "39",
                    "currency": "$",
                    "description": "Perfect for small projects and startups",
                    "features": [
                        { "text": "Up to 5 projects", "included": true },
                        { "text": "Basic support", "included": true },
                        { "text": "1 GB storage", "included": true },
                        { "text": "Community access", "included": true },
                        { "text": "API access", "included": false }
                    ],
                    "buttonText": "Get Started",
                    "buttonUrl": "#",
                    "featured": false
                },
                {
                    "name": "Professional",
                    "monthlyPrice": "99",
                    "annualPrice": "79",
                    "currency": "$",
                    "description": "Best for growing businesses",
                    "features": [
                        { "text": "Unlimited projects", "included": true },
                        { "text": "Priority support", "included": true },
                        { "text": "50 GB storage", "included": true },
                        { "text": "Advanced analytics", "included": true },
                        { "text": "API access", "included": true }
                    ],
                    "buttonText": "Get Started",
                    "buttonUrl": "#",
                    "featured": true,
                    "badge": "Most Popular"
                },
                {
                    "name": "Enterprise",
                    "monthlyPrice": "199",
                    "annualPrice": "159",
                    "currency": "$",
                    "description": "For large organizations",
                    "features": [
                        { "text": "Unlimited everything", "included": true },
                        { "text": "24/7 dedicated support", "included": true },
                        { "text": "500 GB storage", "included": true },
                        { "text": "Custom integrations", "included": true },
                        { "text": "SLA guarantee", "included": true }
                    ],
                    "buttonText": "Contact Sales",
                    "buttonUrl": "#",
                    "featured": false
                }
            ]
        },
        "cardStyle": {
            "type": "string",
            "default": "default",
            "enum": ["default", "bordered", "glass"]
        }
    },
    "supports": {
        "html": false,
        "align": [
            "wide",
            "full"
        ],
        "color": {
            "background": true,
            "text": true
        },
        "spacing": {
            "padding": true,
            "margin": true
        }
    }
}
