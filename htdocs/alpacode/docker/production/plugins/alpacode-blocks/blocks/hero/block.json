{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "alpacode/hero",
	"version": "1.0.0",
	"title": "Hero",
	"category": "alpacode",
	"description": "Premium hero section with parallax, particles, and scroll animations.",
	"keywords": [
		"hero",
		"banner",
		"header",
		"landing",
		"intro",
		"parallax",
		"particles"
	],
	"textdomain": "alpacode-blocks",
	"editorScript": {
		"handle": "alpacode-hero-editor",
		"src": "file:./editor.js",
		"dependencies": [
			"wp-blocks",
			"wp-element",
			"wp-block-editor",
			"wp-components",
			"wp-server-side-render"
		]
	},
	"style": "file:./style.css",
	"render": "file:./render.php",
	"attributes": {
		"eyebrow": {
			"type": "string",
			"default": "Digital Solutions"
		},
		"heading": {
			"type": "string",
			"default": "Build Better Software"
		},
		"description": {
			"type": "string",
			"default": "We help businesses transform their ideas into powerful digital products with cutting-edge technology and expert consulting."
		},
		"primaryButtonText": {
			"type": "string",
			"default": "Get Started"
		},
		"primaryButtonUrl": {
			"type": "string",
			"default": "#contact"
		},
		"secondaryButtonText": {
			"type": "string",
			"default": "View Our Work"
		},
		"secondaryButtonUrl": {
			"type": "string",
			"default": "#portfolio"
		},
		"showButtons": {
			"type": "boolean",
			"default": true
		},
		"backgroundType": {
			"type": "string",
			"default": "gradient",
			"enum": ["gradient", "particles", "video"]
		},
		"videoUrl": {
			"type": "string",
			"default": ""
		},
		"particleDensity": {
			"type": "number",
			"default": 30
		},
		"enableParallax": {
			"type": "boolean",
			"default": true
		},
		"enableTextAnimation": {
			"type": "boolean",
			"default": true
		},
		"showScrollIndicator": {
			"type": "boolean",
			"default": true
		},
		"alignment": {
			"type": "string",
			"default": "center",
			"enum": ["left", "center"]
		}
	},
	"supports": {
		"html": false,
		"align": [
			"wide",
			"full"
		],
		"color": {
			"background": true,
			"text": true
		},
		"spacing": {
			"padding": true,
			"margin": true
		}
	}
}
