{
    "$schema": "https://schemas.wp.org/trunk/block.json",
    "apiVersion": 3,
    "name": "alpacode/testimonials",
    "version": "1.0.0",
    "title": "Testimonials",
    "category": "alpacode",
    "description": "Showcase client testimonials with elegant carousel and infinite scroll layouts.",
    "keywords": [
        "testimonials",
        "reviews",
        "clients",
        "feedback",
        "carousel",
        "infinite"
    ],
    "textdomain": "alpacode-blocks",
    "editorScript": {
        "handle": "alpacode-testimonials-editor",
        "src": "file:./editor.js",
        "dependencies": [
            "wp-blocks",
            "wp-element",
            "wp-block-editor",
            "wp-components",
            "wp-server-side-render"
        ]
    },
    "style": "file:./style.css",
    "viewScript": "file:./view.js",
    "render": "file:./render.php",
    "attributes": {
        "eyebrow": {
            "type": "string",
            "default": "Testimonials"
        },
        "heading": {
            "type": "string",
            "default": "What Our Clients Say"
        },
        "description": {
            "type": "string",
            "default": ""
        },
        "testimonials": {
            "type": "array",
            "default": [
                {
                    "quote": "Working with this team transformed our entire digital strategy. The results exceeded our expectations.",
                    "author": "Sarah Johnson",
                    "role": "CEO, TechCorp",
                    "avatar": "",
                    "rating": 5,
                    "company": ""
                },
                {
                    "quote": "Professional, responsive, and incredibly talented. They delivered a solution that perfectly matched our vision.",
                    "author": "Michael Chen",
                    "role": "CTO, Innovation Labs",
                    "avatar": "",
                    "rating": 5,
                    "company": ""
                },
                {
                    "quote": "The attention to detail and commitment to quality is unmatched. Highly recommend for any serious project.",
                    "author": "Emily Rodriguez",
                    "role": "Product Manager, StartupXYZ",
                    "avatar": "",
                    "rating": 5,
                    "company": ""
                },
                {
                    "quote": "Outstanding communication and technical expertise. They turned our complex requirements into an elegant solution.",
                    "author": "David Park",
                    "role": "Founder, NextGen Solutions",
                    "avatar": "",
                    "rating": 5,
                    "company": ""
                }
            ]
        },
        "layout": {
            "type": "string",
            "default": "carousel",
            "enum": ["carousel", "infinite", "grid"]
        },
        "columns": {
            "type": "number",
            "default": 3
        },
        "showRating": {
            "type": "boolean",
            "default": true
        },
        "showQuoteIcon": {
            "type": "boolean",
            "default": true
        },
        "autoplay": {
            "type": "boolean",
            "default": true
        },
        "autoplaySpeed": {
            "type": "number",
            "default": 5000
        },
        "infiniteSpeed": {
            "type": "number",
            "default": 30
        },
        "pauseOnHover": {
            "type": "boolean",
            "default": true
        },
        "showFadeEdges": {
            "type": "boolean",
            "default": true
        },
        "cardStyle": {
            "type": "string",
            "default": "default",
            "enum": ["default", "bordered", "glass", "minimal"]
        }
    },
    "supports": {
        "html": false,
        "align": [
            "wide",
            "full"
        ],
        "color": {
            "background": true,
            "text": true
        },
        "spacing": {
            "padding": true,
            "margin": true
        }
    }
}
