{
    "$schema": "https://schemas.wp.org/trunk/block.json",
    "apiVersion": 3,
    "name": "alpacode/faq",
    "version": "1.0.0",
    "title": "FAQ Accordion",
    "category": "alpacode",
    "description": "Frequently asked questions with smooth accordion animation.",
    "keywords": ["faq", "accordion", "questions", "answers", "collapse"],
    "textdomain": "alpacode-blocks",
    "style": "file:./style.css",
    "viewScript": "file:./view.js",
    "render": "file:./render.php",
    "attributes": {
        "eyebrow": {
            "type": "string",
            "default": "FAQ"
        },
        "heading": {
            "type": "string",
            "default": "Frequently Asked Questions"
        },
        "description": {
            "type": "string",
            "default": ""
        },
        "items": {
            "type": "array",
            "default": [
                {
                    "question": "What services do you offer?",
                    "answer": "We offer web development, mobile app development, UI/UX design, cloud solutions, and digital strategy consulting."
                },
                {
                    "question": "How long does a typical project take?",
                    "answer": "Project timelines vary based on scope and complexity. A simple website might take 4-6 weeks, while a complex application could take 3-6 months."
                },
                {
                    "question": "Do you offer ongoing support?",
                    "answer": "Yes, we offer flexible support and maintenance packages to keep your digital products running smoothly after launch."
                }
            ]
        },
        "allowMultiple": {
            "type": "boolean",
            "default": false
        },
        "defaultOpen": {
            "type": "number",
            "default": -1
        },
        "style": {
            "type": "string",
            "default": "default",
            "enum": ["default", "bordered", "separated", "minimal"]
        },
        "iconPosition": {
            "type": "string",
            "default": "right",
            "enum": ["left", "right"]
        },
        "columns": {
            "type": "number",
            "default": 1
        }
    },
    "supports": {
        "html": false,
        "align": ["wide", "full"],
        "color": { "background": true },
        "spacing": { "padding": true, "margin": true }
    }
}
