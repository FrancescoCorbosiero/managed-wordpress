{
    "$schema": "https://schemas.wp.org/trunk/block.json",
    "apiVersion": 3,
    "name": "alpacode/stats",
    "version": "0.0.2",
    "title": "Stats Counter",
    "category": "alpacode",
    "description": "Animated statistics and metrics counter to showcase achievements.",
    "keywords": [
        "stats",
        "statistics",
        "metrics",
        "counter",
        "numbers",
        "achievements"
    ],
    "textdomain": "alpacode-blocks",
    "editorScript": {
        "handle": "alpacode-stats-editor",
        "src": "file:./editor.js",
        "dependencies": [
            "wp-blocks",
            "wp-element",
            "wp-block-editor",
            "wp-components",
            "wp-server-side-render"
        ]
    },
    "style": "file:./style.css",
    "viewScript": "file:./view.js",
    "render": "file:./render.php",
    "attributes": {
        "stats": {
            "type": "array",
            "default": [
                {
                    "number": "500",
                    "suffix": "+",
                    "label": "Projects Completed",
                    "description": "Successfully delivered worldwide"
                },
                {
                    "number": "50",
                    "suffix": "+",
                    "label": "Happy Clients",
                    "description": "Across multiple industries"
                },
                {
                    "number": "15",
                    "suffix": "",
                    "label": "Years Experience",
                    "description": "Of excellence in tech"
                },
                {
                    "number": "99",
                    "suffix": "%",
                    "label": "Client Satisfaction",
                    "description": "Based on client feedback"
                }
            ]
        },
        "animationDuration": {
            "type": "number",
            "default": 2000
        }
    },
    "supports": {
        "html": false,
        "align": [
            "wide",
            "full"
        ],
        "color": {
            "background": true,
            "text": true,
            "gradient": true
        },
        "spacing": {
            "padding": true,
            "margin": true
        }
    }
}